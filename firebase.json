{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "target": "portfolio",
      "public": "dist/portfolio",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}