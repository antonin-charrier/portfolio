{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "site": "antonin-charrier-redesign",
    "public": "dist/new-portfolio",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/en-GB",
        "type": 301
      },
      {
        "source": "/:route*",
        "destination": "/en-GB/#/:route",
        "type": 301
      },
      {
        "source": "/en-GB/:route*",
        "destination": "/en-GB/#/:route",
        "type": 301
      },
      {
        "source": "/fr-FR/:route*",
        "destination": "/fr-FR/#/:route",
        "type": 301
      }
    ]
  }
}
